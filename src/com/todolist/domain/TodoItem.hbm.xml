<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.todolist.domain">
    <class name="TodoItem" table="TODOITEM">
        <id name="id" type="int" column="ID">
            <generator class="native" />
        </id>
        <property name="content" type="java.lang.String" column="CONTENT" />
        <property name="createDate" type="java.util.Date" column="CREATEDATE" />
        <property name="endDate" type="java.util.Date" column="ENDDATE" />
        <property name="isFinish" type="boolean" access="field" column="ISFINISH" />
        <many-to-one name="user" class="com.todolist.domain.User">
            <column name="USER_ID" />
        </many-to-one>
    </class>
</hibernate-mapping>
